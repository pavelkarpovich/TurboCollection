@model TurboCollection.Web.ViewModels.ChatsViewModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["My Chats"];
}

<div class="Parent">
    <div class="leftcolumn">
        <ul class="navbar-nav flex-grow-1">
            @Model.User.FirstName @Model.User.LastName
            <hr />
            <li class="nav-item navitem">
                <a class="nav-link text-dark" asp-area="" asp-controller="MyPage" asp-action="MyCollection">My Collection</a>
            </li>
            <li class="nav-item navitem">
                <a class="nav-link text-dark" asp-area="" asp-controller="MyPage" asp-action="MyExtra">My Extra</a>
            </li>
            <li class="nav-item navitem">
                <a class="nav-link text-dark" style="font-weight: bold" asp-area="" asp-controller="Chat" asp-action="MyChats">My Chats</a>
            </li>
            <li class="nav-item navitem">
                <a class="nav-link text-dark" asp-area="" asp-controller="MyPage" asp-action="Search">Search</a>
            </li>
        </ul>
    </div>
    <div class="rightcolumn">
        <h2 style="text-align: center">My Chats</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                        Name
            </th>
            <th>
                        
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
                @foreach (var item in Model.Users)
                {
            <tr>
                <td>
                            @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                </td>

                <td>
                            @Html.ActionLink("Open chat", "ChatWith", "Chat", new { userId=item.UserId })
                </td>
            </tr>
                }

    </div>
</div>

<style>
    .navitem:hover {
        background-color: bisque;
    }

    .body {
        padding: 0;
        margin: 0;
    }

    .Parent {
        display: flex;
        flex-direction: row;
    }

    .leftcolumn {
        width: 15%;
        height: 100vh;
        background-color: floralwhite;
