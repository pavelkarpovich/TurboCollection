@model IEnumerable<TurboCollection.Web.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Info";
}

<div class="container">
    <main role="main" class="pb-3">
        <h2 style="text-align: center">Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img style="border-radius: 10px; border: 1px solid #ddd" width="150px" src="@Html.DisplayFor(modelItem => item.PictureUrl)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.ActionLink("Open", "UserPage", new { userId=item.UserId })
            </td>
            <td>
                @Html.ActionLink("Go to chat", "ChatWith", "Chat", new { userId=item.UserId })
            </td>
        </tr>
}
    </tbody>
</table>
    </main>
</div>
