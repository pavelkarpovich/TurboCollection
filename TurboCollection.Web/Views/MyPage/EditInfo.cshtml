@model TurboCollection.Web.ViewModels.UserEditViewModel

@{
    ViewData["Title"] = "EditInfo";
}

<div class="container">
    <main role="main" class="pb-3">
<div class="row">
    <div class="col-md-4">
            <form enctype="multipart/form-data" asp-action="EditInfo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <output>
                            @if(string.IsNullOrEmpty(Model.PictureUrl))
            {
                <img style="border: 1px solid #ddd" width="250px" src="/images/no-image.png" />
            }
            else
            {
                <img style="border: 1px solid #ddd" width="250px" src="@Html.DisplayFor(model => model.PictureUrl)" />
            }
                            @*<img style="border: 1px solid #ddd" width="250px" src="@Html.DisplayFor(model => model.PictureUrl)" />*@
                        </output>
                        <div class="custom-file">
                            <input asp-for="Picture" class="custom-file-input" id="customFile">
                        </div>
                    </div>
            <br />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            @Html.HiddenFor(model => model.UserId, new { Name = "UserId" })
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</main>
</div>

@*@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}*@
@section Scripts {
    <script type="text/javascript">
        const output = document.querySelector("output");
        const input = document.querySelector("#customFile");
        let imagesArray;

        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
        });

        input.addEventListener("change", () => {
            const file = input.files
            imagesArray = file[0]
            let image = `<div class="image">
                            <img style='height: 250px;' src="${URL.createObjectURL(imagesArray)}" alt="image">
                        </div>`
            output.innerHTML = image
        })
    </script>
}