@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options

@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions

<!DOCTYPE html>
<html lang="en">

@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var curculture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;//requestCulture.RequestCulture.Culture.Name;
    var curuiculture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name;//requestCulture.RequestCulture.Culture.Name;

    // var returnUrl =Url.Content("~/ ");
    var returnUrl = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}" + Context.Request.QueryString.Value;

    var parms1 = new Dictionary<string, string>
{
                { "culture", "en-US" },
                { "returnUrl", returnUrl}
            };
    var parms2 = new Dictionary<string, string>
{
                //{ "culture", "ru-RU" },
                { "culture", "fr" },
                { "returnUrl", returnUrl}
            };
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TurboCollection</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TurboCollection.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a href="@Url.Action("Index", "Home")">
                    <img style="max-width: 120px; max-height: 50px" src="/images/logo1.jpg" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Collection" asp-action="TestData">@ViewData["Collection"]</a>
                        </li>
                    </ul>
                </div>

                <table style="width:100%;">
                    <tr style="width:100%;">
                        <td style="width:50%;float:left;font-weight:bold;font-size:large;text-align:left;color:blue">
                            @ViewData["Header"]
                            <button class="navbar-toggler langcls " type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                        </td>
                        <td style="width: 50%; float: right;">
                            <div class="btn-group border-bottom" style=" float: right;">
                                <form id="selectLanguage1"
                                      asp-action="SetLanguage1" asp-all-route-data="parms1" asp-route-returnUrl="@returnUrl"
                                      method="post" class="form-horizontal" role="form">

                                    <button type="submit" class="btn btn-primary border-bottom right">En</button>
                                </form>
                            </div>
                            <div class="btn-group border-bottom" style=" float: right;">
                                <form id="selectLanguage1"
                                      asp-action="SetLanguage1" asp-all-route-data="parms2" asp-route-returnUrl=@returnUrl
                                      method="post" class="form-horizontal" role="form">

                                    <button type="submit" class="btn btn-primary border-bottom right">Рус</button>
                                </form>
                            </div>
                        </td>
                </table>

                <div class="mr-2">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
