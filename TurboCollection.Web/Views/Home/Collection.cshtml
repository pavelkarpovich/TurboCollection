@using TurboCollection.Web.ViewModels;
@model TurboItemsViewModel

@{
    ViewData["Title"] = "Collection";
}

<section>
    <div>
        <form method="get">
            <label data-title="brand">
                <select asp-for="@Model.CollectionFilerApplied" asp-items="@Model.Collections"></select>
                <input asp-for="Search" type="text" placeholder="Search">
            </label>
            <input type="submit" value="Apply Filters" />
        </form>
    </div>
</section>

<div id="anyTable" class="d-flex flex-wrap">
@foreach (var item in Model.Items) {
    <div class="turboitem">
        <img style="border-radius: 10px; border: 1px solid #ddd" width="250px" src="@Html.DisplayFor(modelItem => item.Picture)" />
    </div>
}
</div>
